# Production Environment Variables
# Copy this file to .env.prod and fill in the values

# Environment Type
RUN_ENV=production

# Domain Configuration for Let's Encrypt
VIRTUAL_HOST=yourdomain.com
LETSENCRYPT_HOST=yourdomain.com
LETSENCRYPT_EMAIL=your@email.com

# Database Credentials - Use strong passwords!
DB_ROOT_PASSWORD=change_me_strong_root_password
DB_USER_PASSWORD=change_me_strong_user_password

# HTTPS Configuration
FORCE_HTTPS=true

# API Keys
API_KEY=your_api_key_here
OPENAI_API_KEY=your_openai_api_key
OPENROUTER_API_KEY=your_openrouter_api_key

# AI Provider Configuration
AI_PROVIDER=openai
OPENAI_MODEL=gpt-3.5-turbo
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Site Information
SITE_URL=https://yourdomain.com
SITE_TITLE=Music Mix Analyzer

# Analytics (if enabled)
ENABLE_ANALYTICS=true
MATOMO_URL=your_matomo_url
MATOMO_SITE_ID=your_site_id

# Security
SECRET_KEY=generate_a_random_secret_key_here 